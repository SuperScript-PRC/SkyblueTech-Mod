{
	"format_version": "1.10.0",
	"animation_controllers": {
		"controller.animation.skybluetech.digger_ani.facing_ctrl": {
			"states": {
				"default": {
					"animations": [
						{"facing_up": "variable.mod_block_facing==1"},
						{"facing_down": "variable.mod_block_facing==0"},
						{"facing_north": "variable.mod_block_facing==2"},
						{"facing_south": "variable.mod_block_facing==3"},
						{"facing_west": "variable.mod_block_facing==4"},
						{"facing_east": "variable.mod_block_facing==5"}
					]
				}
			}
		},
		"controller.animation.skybluetech.digger_ani.active": {
			"states": {
				"default": {
					"animations": [
						{"still": "!variable.mod_block_is_active"},
						{"rot": "variable.mod_block_is_active && (variable.mod_block_facing!=2 && variable.mod_block_facing!=3)"},
						{"rot2": "variable.mod_block_is_active && (variable.mod_block_facing==2 || variable.mod_block_facing==3)"} // 有一个朝向钻头旋转动画有误
					]
				}
			}
		}
	}
}